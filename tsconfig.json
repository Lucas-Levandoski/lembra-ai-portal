{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "Generic": ["./modules/generic/index.ts"],
      "Generic/*": ["./modules/generic/*"],
      "Calendar": ["./modules/calendar/index.ts"],
      "Calendar/*": ["./modules/calendar/*"],
      "Common": ["./modules/common/index.ts"],
      "Common/*": ["./modules/common/*"],
      "Auth": ["./authentication/index.ts"],
      "Availability": ["./modules/availability/index.ts"],
      "Availability/*": ["./modules/availability/*"],
      "Agenda": ["./modules/agenda/index.ts"],
      "Agenda/*": ["./modules/agenda/*"],
      "Message-Templates": ["./modules/message-templates/index.ts"],
      "Message-Templates/*": ["./modules/message-templates/*"],
      "Bookings": ["./modules/bookings/index.ts"],
      "Bookings/*": ["./modules/bookings/*"],
      "Profile": ["./modules/profile/index.ts"],
      "Profile/*": ["./modules/profile/*"],
      "Store": ["./store/index.ts"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
